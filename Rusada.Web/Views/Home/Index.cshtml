    function PlaneListModel() {
        var self = this;
        self.planeList = ko.observableArray([]);

        self.loadListData = function (searchText) {
            let url = "/api/planesightings";
            if (searchText != null && searchText.trim().length > 0) {
                url = url + "?searchText=" + searchText;
            }
            let jqxhr = $.getJSON(url, function () {
                console.log("success");
            })
                .done(function (response) {
                    arrangeDataListResponse(response);
                })
                .fail(function (error) {
                    console.log("error");
                    console.log(error);
                })
                .always(function () {
                    console.log("complete");
                });

        }

        self.testIt = function () {
            console.log(self.planeList());
        }

        function arrangeDataListResponse(response) {
            const list = response.data;
            self.planeList.removeAll();
            list.forEach(function (item, index) {
                self.planeList.push(item);
            });
        }
    }

    function PlaneListViewModel(planeListModel) {
        var self = this;
        self.planeList = planeListModel.planeList;
        self.createModel = null;
        self.searchText = ko.observableArray("");
        

        ko.postbox.subscribe("newSightingAddedTopic", function (newValue) {
            planeListModel.loadListData();
            self.createModel.hide();
        });

        self.showCreateClicked = function () {
            self.createModel = new bootstrap.Modal(document.getElementById('createModal'), {});
            self.createModel.show();
        }

        self.deleteClicked = function (planeSighting) {

            self.planeList.remove(planeSighting);
        }

        self.detailClicked = function (planeSighting) {
            
        }

        self.searchClicked = function () {
            //TODO sinitize the search text
            //TODO back to all results
            planeListModel.loadListData(self.searchText());
        }

        planeListModel.loadListData();
    }

    ko.applyBindings(
        new PlaneListViewModel(new PlaneListModel()),
        document.getElementById("plane-list"));


